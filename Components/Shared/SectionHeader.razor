<div class="section-header">
    <h2>@Title</h2>
    @if (!string.IsNullOrEmpty(LinkUrl))
    {
        <a href="@LinkUrl">@LinkText</a>
    }
</div>

@code {
    [Parameter]
    public string Title { get; set; } = string.Empty;

    [Parameter]
    public string? LinkUrl { get; set; }

    [Parameter]
    public string LinkText { get; set; } = "Se alle";
}
